<?xml version='1.0' encoding='UTF-8'?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
	<class name="com.map.xml.Person" table="person">

		<!--If we dont write column="person_id, than it will understand that in 
			table also column name will be `id` -->
		<id name="id" column="person_id">
			<!--Pkid generator strategy.native means we will provide -->
			<generator class="native"></generator>
		</id>


		<!-- below tag can also be self closing -->
		<property name="name" column="person_name" type="string"></property>
		<property name="address" column="person_address"
			type="string"></property>
		<property name="phone" column="person_phone" type="string"></property>



	</class>

</hibernate-mapping>
